#!/bin/bash

# vhosts
alias hosts='sudo subl /etc/hosts'

# sublime text
alias s='subl'

alias c='clear'
alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'

alias size='du -a -h --max-depth=1 | sort -hr'

alias packages="rpm -qa --queryformat '%10{size} - %-25{name} \t %{version}\n' | sort -n"